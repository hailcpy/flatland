#include "circle.fbp"

@param {theta} (choice (30 45 60))
limbs(start theta) -> move1(move 5 0)
move1 -> turn2(turn theta)
turn2 -> move2(move 10 0)
move2 -> move3(move -10 1) 
move3 -> turn3(turn (* -2 theta))
turn3 -> move4(move 10 0)
move4 -> move5(move -10 1)
move5 -> turn4(turn theta)
turn4 -> limbs(end)

@param {length} (int (5 20))
@param {angle} (choice (30 45 60))
torso(start length angle) -> torso(move length 0)
torso -> legs(limbs angle)
legs -> torso(end)

@param {headsize} (int (5 20))
@param {limbsangle} (choice (30 45 60))
@param {torsoangle} (choice (30 45 60))
worm(start headsize limbsangle torsoangle) -> head(circle headsize)
head -> turn1(turn -90)
turn1 -> arms(limbs limbsangle)
arms -> torso1(torso 10 45)
torso1 -> turn2(turn torsoangle)
turn2 -> torso2(torso 10 45)
torso2 -> turn3(turn torsoangle)
turn3 -> torso3(torso 10 45)
torso3 -> turn4(turn torsoangle)
turn4 -> worm(end)

{"position":[53,53]} -> worm(10 45 10)
